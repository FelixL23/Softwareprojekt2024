@model SoPro24Team03.ViewModels.RoleViewModel;

@{
    ViewData["Title"] = "Rollen";
}

<div class="container-fluid text-center" style="width: 80%; height: 100%;">
    <div class="d-flex justify-content-between pb-3">
        <a class="btn btn-primary" asp-area="" asp-controller="Role" asp-action="Create">Neu Erstellen</a>
    </div>
    <div class="d-flex gap-4" style="height: 80%;">
        <section id="item-list" class="d-flex flex-column gap-3" style="width: 24rem;">
            @foreach (var role in Model.Roles)
            {
                <span class="p-3 bg-primary justify-content-center align-items-center text-secondary rounded d-flex gap-3" style="width: 100%;">
                    <a class="item-link" data-item-id="@role.Id">
                        @role.Name
                    </a>
                    <a class="btn" asp-area="" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">
                        <i class="bi bi-gear-wide-connected"></i>
                    </a>
                </span>
            }
        </section>
    </div>
</div>